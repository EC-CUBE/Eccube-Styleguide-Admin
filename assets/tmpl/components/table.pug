mixin c-sortTable(text1,text2,text3)
    .card.rounded.border-0.mb-2
        ul.list-group.list-group-flush
            li.list-group-item
                form.form-row
                    .col-auto
                        input(type="text").form-control
                    .col-auto
                        button(type="submit").btn.btn-ec-regular 新規作成
            li.list-group-item
                .row.justify-content-around

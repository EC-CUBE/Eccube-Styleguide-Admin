extends /assets/tmpl/moc/layout/_layout-2col
block pageTitle
    include /assets/tmpl/components/pageTitle.pug
    +c-pageTitle("受注マスター","受注管理")

block outsideBlock
    +b.c-outsideBlock
        +e.contents
            .row
                .col-12
                    form
                        label.col-form-label 受注ID・注文者名・注文者会社名・メールアドレス・電話番号
                        input.form-control(type='text')
                    form.form-row
                        .form-group.col-12
                            p.col-form-label 対応状況
                            .form-check.form-check-inline
                                input.form-check-input#check_newReception(type='checkbox', value='')
                                label.form-check-label(for="check_newReception") 新規受付
                            .form-check.form-check-inline
                                input.form-check-input#check_paymentProgress(type='checkbox', value='')
                                label.form-check-label(for="check_paymentProgress")  決済処理中
                            .form-check.form-check-inline
                                input.form-check-input#check_paymentWait(type='checkbox', value='')
                                label.form-check-label(for="check_paymentWait") 入金待ち
                            .form-check.form-check-inline
                                input.form-check-input#check_paymentDone(type='checkbox', value='')
                                label.form-check-label(for="check_paymentDone")  入金済み
                            .form-check.form-check-inline
                                input.form-check-input#check_cancel(type='checkbox', value='')
                                label.form-check-label(for="check_cancel") キャンセル
                            .form-check.form-check-inline
                                input.form-check-input#check_stockNow(type='checkbox', value='')
                                label.form-check-label(for="check_stockNow")  取り寄せ中
                            .form-check.form-check-inline
                                input.form-check-input#check_sent(type='checkbox', value='')
                                label.form-check-label(for="check_sent") 発送済み
                            .form-check.form-check-inline
                                input.form-check-input#check_purchasingProgress(type='checkbox', value='')
                                label.form-check-label(for="check_purchasingProgress")  購入処理中
                    .d-inline-block.mb-3(data-toggle="collapse" href="#searchDetail" aria-expanded="false" aria-controls="searchDetail")
                        a
                            i.fa.fa-plus-square-o.font-weight-bold.mr-1
                            span.font-weight-bold 詳細検索
        +b.c-subContents.collapse(id="searchDetail").ec-collapse
            .row
                .col
                    form
                        label.col-form-label 注文者名
                        input(type="text").form-control
                .col
                    form.form-row
                        .col-12
                            p.col-form-label 支払方法
                            .form-check.form-check-inline
                                input.form-check-input#check_postalTransfer(type='checkbox', value='')
                                label.form-check-label(for="check_postalTransfer") 郵便振替
                            .form-check.form-check-inline
                                input.form-check-input#check_registeredMail(type='checkbox', value='')
                                label.form-check-label(for="check_registeredMail")  現金書留
                            .form-check.form-check-inline
                                input.form-check-input#check_bankTransfer(type='checkbox', value='')
                                label.form-check-label(for="check_bankTransfer") 銀行振込
                            .form-check.form-check-inline
                                input.form-check-input#check_cashOnDelivery(type='checkbox', value='')
                                label.form-check-label(for="check_cashOnDelivery")  代金引換
            .row
                .col
                    form
                        label.col-form-label 注文者名（フリガナ）
                        input(type="text").form-control
                .col
                    form
                        label.col-form-label 受注日
                        .form-row.align-items-center
                            .col
                                input.form-control(type='date', value='2000-01-01')
                            .col-auto.text-center
                                span 〜
                            .col
                                input.form-control(type='date', value='2000-01-01')
            .row
                .col
                    form
                        label.col-form-label 注文者会社名
                        input(type="text").form-control
                .col
                    form
                        label.col-form-label 入金日
                        .form-row.align-items-center
                            .col
                                input.form-control(type='date', value='2000-01-01')
                            .col-auto.text-center
                                span 〜
                            .col
                                input.form-control(type='date', value='2000-01-01')
            .row
                .col
                    form
                        label.col-form-label メールアドレス
                        input(type="email").form-control
                .col
                    form
                        label.col-form-label
                            | 更新日
                        .form-row.align-items-center
                            .col
                                input.form-control(type='date', value='2000-01-01')
                            .col-auto
                                span 〜
                            .col
                                input.form-control(type='date', value='2000-01-01')
            .row
                .col
                    form
                        label.col-form-label 受注ID
                        input(type="text").form-control
                .col
                    form
                        label.col-form-label 購入金額
                        .form-row.align-items-center
                            .col
                                .input-group
                                    .input-group-prepend
                                        .input-group-text ￥
                                    input.form-control(type='number')
                            .col-auto
                                span 〜
                            .col
                                .input-group
                                    .input-group-prepend
                                        .input-group-text ￥
                                    input.form-control(type='number')
            .row
                .col
                    form
                        label.col-form-label 電話番号
                        input(type='text').form-control
                .col
                    form.mb-3
                        label.col-form-label 購入商品名
                        input(type="text").form-control
            .row
                .col
                    form.form-row
                        .col-12
                            p.col-form-label 性別
                            .form-check.form-check-inline
                                input.form-check-input#check_male(type='checkbox', value='')
                                label.form-check-label(for="check_male") 男性
                            .form-check.form-check-inline
                                input.form-check-input#check_female(type='checkbox', value='')
                                label.form-check-label(for="check_female")  女性
                .col
            .d-block.text-center
                button(type="button").btn.btn-ec-regular 検索条件クリア
        +e.contents
            .row
                .mb-4
                    .col-12
                        a(href="/order/master/none").btn.btn-ec-conversion.px-5 検索
block primaryContents
    .card.rounded.border-0
        .card-body.p-4
            .text-center.text-muted.mb-4.h5 検索条件に合致するデータが見つかりませんでした
            .text-center.text-muted 検索条件を変えて、再度検索をお試しください。
            .text-center.text-muted [詳細検索]も試してみましょう。
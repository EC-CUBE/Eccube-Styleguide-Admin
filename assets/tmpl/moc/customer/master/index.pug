extends /assets/tmpl/moc/layout/_layout-2col.pug
block pageTitle
    include /assets/tmpl/components/pageTitle.pug
    +c-pageTitle("会員マスター","会員管理")

block outsideBlock
    +b.c-outsideBlock
        +e.contents
            .row.justify-content-start
                .col-6
                    form
                        .form-group
                            label.col-form-label 会員ID・メールアドレス・お名前
                            input.form-control(type='text')
                    .d-inline-block.mb-3(data-toggle="collapse" href="#commentList" aria-expanded="false" aria-controls="commentList")
                        i.fa.fa-minus-square-o.font-weight-bold.mr-1
                        span.font-weight-bold 詳細検索
        +b.c-subContents.collapse(id="commentList").show
            .row.mb-2
                .col
                    form
                        .form-group
                            label 会員種別
                            .form-row.align-items-center
                                .col
                                    label.custom-control.custom-radio
                                        input.custom-control-input(name='radio', type='radio')
                                        span.custom-control-indicator
                                        span.custom-control-description 仮会員
                                    label.custom-control.custom-radio
                                        input.custom-control-input(name='radio', type='radio')
                                        span.custom-control-indicator
                                        span.custom-control-description 本会員
                .col
                    form
                        .form-group
                            label 購入商品名
                            input(type="text").form-control
            .row.mb-2
                .col
                    form
                        .form-group
                            label 性別
                            .form-row.align-items-center
                                .col
                                    label.custom-control.custom-radio
                                        input.custom-control-input(name='radio', type='radio')
                                        span.custom-control-indicator
                                        span.custom-control-description 男性
                                    label.custom-control.custom-radio
                                        input.custom-control-input(name='radio', type='radio')
                                        span.custom-control-indicator
                                        span.custom-control-description 女性
                .col
                    form
                        .form-group
                            label 購入金額
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='text')
                                .col-auto
                                    span 〜
                                .col
                                    input.form-control(type='text')
            .row.mb-2
                .col
                    form
                        .form-group
                            label 誕生月
                            .row
                                .col-5
                                    select.form-control
                                        option 選んでください
                                        option ...
                                .col-7
                .col
                    form
                        .form-group
                            label 購入回数
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='text')
                                .col-auto
                                    span 〜
                                .col
                                    input.form-control(type='text')
            .row.mb-2
                .col
                    form
                        .form-group
                            label 誕生日
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='date', value='2000-01-01')
                                .col-auto.text-center
                                    span 〜
                                .col
                                    input.form-control(type='date', value='2000-01-01')
                .col
                    form
                        .form-group
                            label 登録日
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='date', value='2000-01-01')
                                .col-auto.text-center
                                    span 〜
                                .col
                                    input.form-control(type='date', value='2000-01-01')
            .row.mb-2
                .col
                    form
                        .form-group
                            label 都道府県
                            .row
                                .col-5
                                    select.form-control
                                        option 選んでください
                                        option ...
                                .col-7
                .col
                    form
                        .form-group
                            label 更新日
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='date', value='2000-01-01')
                                .col-auto.text-center
                                    span 〜
                                .col
                                    input.form-control(type='date', value='2000-01-01')
            .row.mb-4
                .col
                    form
                        .form-group
                            label 電話番号
                            .form-row.align-items-center
                                .col-7
                                    .row
                                        .col
                                            input.form-control(type='text', placeholder="00")
                                        .col-auto.text-center
                                            span -

                                            input.form-control(type='text', placeholder="0000")
                                        .col-auto.text-center
                                            span -
                                        .col
                                            input.form-control(type='text', placeholder="0000")
                .col
                    form
                        .form-group
                            label 最終購入日
                            .form-row.align-items-center
                                .col
                                    input.form-control(type='date', value='2000-01-01')
                                .col-auto.text-center
                                    span 〜
                                .col
                                    input.form-control(type='date', value='2000-01-01')
            .d-block.text-center
                button(type="button").btn.btn-light.border.border-dark 検索条件クリア
        +e.contents.mb-5
            button.btn.btn-primary.px-5(type="button") 検索
block primaryContents
    .row.justify-content-between.mb-2
        .col-6
        .col-5.text-right
            .d-inline-block.mr-2
                form
                    select.custom-select
                        option(selected='') 10件
                        option ...
            .d-inline-block
                .btn-group(role='group')
                    button.btn.btn-light.border.border-dark(type='button')
                        i.fa.fa-cloud-download.mr-1
                        span CSVダウンロード
                    button.btn.btn-light.border.border-dark(type='button')
                        i.fa.fa-cog.mr-1
                        span CSV出力設定
    .card.rounded.border-0.mb-4
        .card-body.p-0
            table.table
                thead
                    th.border-top-0 会員ID
                    th.border-top-0 会員名
                    th.border-top-0 電話番号
                    th.border-top-0 メールアドレス
                    th.border-top-0 &nbsp;
                    th.border-top-0 &nbsp;
                - for (var x = 0; x < 10; x++)
                    tr
                        td.align-middle 1
                        td.align-middle
                            a(href='#') 山田 はなこ
                        td.align-middle 06-6666-6666
                        td.align-middle witchdoktor@gmail.com
                        td.align-middle
                        td.align-middle
                            .row
                                .col.text-center(data-toggle="tooltip" data-placement="top" title="削除"): i.fa.fa-times.fa-lg(aria-hidden="true")
            .row.justify-content-md-center.mb-4
                .col-auto
                    .btn-group.btn-group-lg
                        button.btn.btn-secondary(type='button') 1
                    .btn-group.btn-group-lg
                        button.btn.btn-light.border.border-dark(type='button') 2
                    .btn-group.btn-group-lg
                        button.btn.btn-light.border.border-dark(type='button') 3
                    .btn-group.btn-group-lg
                        button.btn.btn-light.border.border-dark(type='button') 4
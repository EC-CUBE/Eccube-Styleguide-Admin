extends /assets/tmpl/moc/layout/_layout-2col.pug
block pageTitle
    include /assets/tmpl/components/pageTitle.pug
    +c-pageTitle("商品CSV登録","商品管理")
block primaryContents
    .card.rounded.border-0.mb-4
        .card-header
            .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                span CSVファイルをアップロード
                i.fa.fa-question-circle.fa-lg.fa-lg.ml-1
        .card-body
            .row
                .col-2
                    span CSVファイル選択
                .col
                    form.mb-2
                        a(onclick="$('#fileForm').click()").btn.btn-ec-regular.mr-2 ファイルを選択
                        span 選択されていません
                        input#fileForm.d-none(type="file")
                    button(type="submit").btn.btn-ec-conversion 一括登録を実行
    .card.rounded.border-0.mb-4
        .card-header
            .row.justify-content-between
                .col-6
                    .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                        span.align-middle 商品登録CSVファイルフォーマット
                        i.fa.fa-question-circle.fa-lg.fa-lg.ml-1
                .col-4.text-right
                    button.btn.btn-ec-regular 雛形ファイルダウンロード
        .card-body
            table.table.table-striped.table-bordered
                tbody
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品ID
                        td.align-middle 新規登録時は未設定
                            br
                            | 既存商品の更新は商品IDを設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 公開ステータス(ID)
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品名
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray ショップ用メモ欄
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品説明(一覧)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品説明(詳細)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 検索ワード
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray フリーエリア
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品削除フラグ
                        td.align-middle 設定されていない場合0を登録
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品画像
                        td.align-middle 複数画像の場合、画像ファイル名をカンマ区切りで「"」で囲んで設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品カテゴリ(ID)
                        td.align-middle 複数カテゴリの場合、商品カテゴリIDをカンマ区切りで「"」で囲んで設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray タグ(ID)
                        td.align-middle 複数タグの場合、タグIDをカンマ区切りで「"」で囲んで設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品種別(ID)
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 規格分類1(ID)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 規格分類2(ID)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品種別(ID)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 発送日目安(ID)
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品コード
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 在庫数
                        td.align-middle
                    tr
                        th.w-25.align-middle.table-ec-lightGray 在庫数無制限フラグ
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle 在庫数無制限フラグが0の場合、0以上の数値を設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 販売制限数
                        td.align-middle 0以上の数値を設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 通常価格
                        td.align-middle 0以上の数値を設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 販売価格
                            span.badge.badge-primary.ml-1 必須
                        td.align-middle 0以上の数値を設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 送料
                        td.align-middle 商品ごとの送料設定が有効の場合、0以上の数値を設定
                    tr
                        th.w-25.align-middle.table-ec-lightGray 商品規格削除フラグ
                        td.align-middle 設定されていない場合、0を登録
                                a.btn.btn-ec-actionIcon.mr-2(href="" data-toggle="tooltip" data-placement="top" title="削除"): i.fa.fa-close.fa-lg.text-secondary
                    li.list-group-item
                        form.form-row
                            .col-auto.d-flex.align-items-center
                                input(type="text").form-control
                            .col-auto.d-flex.align-items-center

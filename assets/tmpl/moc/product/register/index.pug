extends /assets/tmpl/moc/layout/_layout-3col.pug
block pageTitle
    include /assets/tmpl/components/pageTitle.pug
    +c-pageTitle("商品登録","商品管理")

block primaryContents
    .card.rounded.border-0.mb-4
        .card-header
            .row
                .col-8
                    .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                        span.card-title 基本設定
                            i.fa.fa-question-circle.ml-1
                .col-4.text-right
                    a(data-toggle="collapse" href="#basicConfig" aria-expanded="false" aria-controls="basicConfig")
                        i.fa.fa-angle-up
        .collapse(id="basicConfig").show
            .card-body
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 商品名
                            i.fa.fa-question-circle.ml-1
                    .col-9
                        p 12
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 商品ID
                            i.fa.fa-question-circle.ml-1
                            span.badge.badge-primary.ml-1 必須
                    .col-9
                        form
                            .form-group
                                input(type="text" placeholder="テキスト").form-control
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 商品種別
                            i.fa.fa-question-circle.ml-1
                            span.badge.badge-primary.ml-1 必須
                    .col-9
                        form
                            .form-group
                                select.form-control
                                    option(value='') 通常商品
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 商品画像
                            i.fa.fa-question-circle.ml-1
                    .col-9
                        form
                            .form-group
                                input(type="file").form-control-file
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 商品説明
                            i.fa.fa-question-circle.ml-1
                    .col-9
                        form
                            .form-group
                                textarea(rows="8").form-control
                        .d-inline-block
                            i.fa.fa-plus-square-o.font-weight-bold.mr-1
                            span.font-weight-bold 一覧コメントを追加
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 販売価格
                            i.fa.fa-question-circle.ml-1
                            span.badge.badge-primary.ml-1 必須
                    .col-9
                        form
                            .form-group
                                input(type="text" placeholder="テキスト").form-control
                        .d-inline-block
                            i.fa.fa-plus-square-o.font-weight-bold.mr-1
                            span.font-weight-bold 通常価格を追加
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 在庫数
                            i.fa.fa-question-circle.ml-1
                            span.badge.badge-primary.ml-1 必須
                    .col-9
                        form
                            .form-group
                                input(type="text" placeholder="テキスト").form-control
                            .form-check
                                label.form-check-label
                                    input.form-check-input(type="checkbox")
                                    span 無制限
                .row.mb-3
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span 検索キーワード
                            i.fa.fa-question-circle.ml-1
                    .col-9
                        form
                            .form-group
                                input(type="text" placeholder="テキスト").form-control
    .card.rounded.border-0.mb-4
        .card-header
            .row
                .col-8
                    .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                        span.card-title 規格設定
                            i.fa.fa-question-circle.ml-1
                .col-4.text-right
                    a(data-toggle="collapse" href="#standardConfig" aria-expanded="false" aria-controls="standardConfig")
                        i.fa.fa-angle-up
        .collapse(id="standardConfig").show
            .card-body
                .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span この商品の規格
                    i.fa.fa-question-circle.ml-1
                table.table.table-striped
                    thead.table-active
                        th 規格１
                        th 規格２
                        th 商品コード
                        th 在庫数
                        th 販売価格（円）
                    tbody
                        tr
                            td プラチナ
                            td 100cm
                            td aa-001
                            td 4
                            td 10,000
                        tr
                            td プラチナ
                            td 130cm
                            td aa-002
                            td 8
                            td 10,000
                        tr
                            td シルバー
                            td 100cm
                            td aa-003
                            td 4
                            td 8,000
                        tr
                            td シルバー
                            td 130cm
                            td aa-004
                            td 6
                            td 8,000
            .card-footer.text-center
                button(type="button").btn.btn-outline-dark この商品の規格管理
    .card.rounded.border-0.mb-4
        .card-header
            .row
                .col-8
                    .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                        span.card-title フリーエリア
                            i.fa.fa-question-circle.ml-1
                .col-4.text-right
                    a(data-toggle="collapse" href="#freeArea" aria-expanded="false" aria-controls="freeArea")
                        i.fa.fa-angle-up
        .collapse(id="freeArea").show
            .card-body
                .row
                    .col-3
                        .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                            span フリーエリア
                            i.fa.fa-question-circle.ml-1
                    .col-9
                        form
                            .form-group
                                textarea(rows="8" placeholder="テキスト").form-control

block secondaryContents
    +b.c-block
        +e.heading
            +e.titles
                .c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title カテゴリ
                    i.fa.fa-question-circle.c-toolTip__icon
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            include /assets/tmpl/components/searchBox.pug
            +c-searchBox
            include /assets/tmpl/components/category.pug
            +c-categoryRegister

            +e.action
                a.c-button--full.c-button--normal(href='#') カテゴリの追加・編集
    +b.c-block
        +e.heading
            +e.titles
                .c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title タグ
                    i.fa.fa-question-circle.c-toolTip__icon
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            include /assets/tmpl/components/tag.pug
            +c-tags

            include /assets/tmpl/components/subAction.pug
            +c-subAction("すべてのタグを表示")

            +e.action
                a.c-button--full.c-button--normal(href='#') タグの追加・編集
    +b.c-block
        +e.heading
            +e.titles
                .c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title 登録日・更新日
                    i.fa.fa-question-circle.c-toolTip__icon
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            +b.DL.c-definitionList
                +e.DT.term
                    i.fa.fa-flag
                    span 登録日
                +e.DD.description 2017/11/09
            +b.DL.c-definitionList
                +e.DT.term
                    i.fa.fa-refresh
                    span 最終更新日
                +e.DD.description 2017/11/12
            +b.DL.c-definitionList
                +e.DT.term
                    i.fa.fa-user
                    span 最終更新者
                +e.DD.description user_name

    +b.c-block
        +e.heading
            +e.titles
                .c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title ショップ用メモ欄
                    i.fa.fa-question-circle.c-toolTip__icon
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            form.c-form
                .c-form__text
                    textarea(rows="9" placeholder="テキスト")
block conversionArea
    +b.c-conversionArea
        +e.container
            +e.leftBlock
                +e.leftBlockItem
                    a(href="").c-beseLink
                        i.fa.fa-backward
                        span 商品マスター
            +e.rightBlock
                +e.rightBlockItem
                    include /assets/tmpl/components/toggleSwitch.pug
                    +c-toggleSwitch
                +e.rightBlockItem
                    button.c-button--conversion.c-button--regular 更新

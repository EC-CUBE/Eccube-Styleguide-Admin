extends /assets/tmpl/moc/layout/_layout-3col.pug
block pageTitle
    +b.c-pageTitle
        +e.titles
            +e.H2.title 商品登録
            +e.SPAN.subTitle 商品管理

block primaryContents
    +b.c-block
        +e.heading
            +e.titles
                +e.H2.title 基本設定
                +e.toolTip
                    i.fa.fa-question-circle
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            +b.c-horizontalForm
                +e.label
                    p hogehoge

                +e.form
                    form.c-form
                        .c-form__text
                            input(type="text")
            +b.c-horizontalForm
                +e.label
                    p hogehoge
                +e.form
                    .row
                        .col-6
                            form.c-form
                                .c-form__text
                                    input(type="text")
                        .col-6
                            form.c-form
                                .c-form__text
                                    input(type="text")

    +b.c-block
        +e.heading
            +e.titles
                +e.H2.title 規格設定
                +e.toolTip
                    i.fa.fa-question-circle
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            .c-toolTip
                span.c-toolTip__title この商品の規格
                i.fa.fa-question-circle.c-toolTip__icon
            include /assets/tmpl/components/table.pug
            +c-table--standard

            +e.action
               a.c-button--regular.c-button--normal(href='#') この商品の規格管理

block secondaryContents
    +b.c-block
        +e.heading
            +e.titles
                +e.H2.title カテゴリ
                +e.toolTip
                    i.fa.fa-question-circle
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            +b.FORM.c-search
                +e.form
                    input(type='text' placeholder='カテゴリ検索')
                +e.A.btn
                    i.fa.fa-search
            include /assets/tmpl/components/category.pug
            +c-category

            +e.action
                a.c-button--full.c-button--normal(href='#') カテゴリの追加・編集
    +b.c-block
        +e.heading
            +e.titles
                +e.H2.title タグ
                +e.toolTip
                    i.fa.fa-question-circle
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            .c-tags
                span.c-tag.c-tag--black オススメ
                span.c-tag.c-tag--blue 限定品
                span.c-tag.c-tag--black 新入荷
                span.c-tag.c-tag--blue 値下げしました
                span.c-tag.c-tag--black オススメ
                span.c-tag.c-tag--blue 限定品
                span.c-tag.c-tag--black 新入荷
                span.c-tag.c-tag--black 値下げしました
                span.c-tag.c-tag--black 送料無料
            a.c-subAction(href='#')
                i.fa.fa-plus-square-o
                span.c-subAction_text すべてのタグを表示
            +e.action
                a.c-button--full.c-button--normal(href='#') タグの追加・編集

block conversionArea
    +b.c-conversionArea
        +e.container
            span 公開
            span 更新
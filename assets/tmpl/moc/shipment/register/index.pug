extends /assets/tmpl/moc/layout/_layout-2col.pug
block pageTitle
    +b.c-pageTitle
        +e.titles
            +e.H2.title 出荷CSV登録
            +e.SPAN.subTitle 出荷管理

block primaryContents
    +b.c-block
        +e.heading
            +e.titles
                +b.c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title CSVファイルをアップロード
                    i.fa.fa-question-circle.fa-lg.c-toolTip__icon
        +e.contents
            .row.mb-2
                .col-2
                    span CSVファイル選択
                .col-10
                    a.c-button--small.c-button--normal(href="#") ファイルを選択
            .row
                .col-2
                    span &nbsp;
                .col-10
                    a.c-button--regular.c-button--conversion(href="#") 一括登録を実行
    +b.c-block
        +e.heading
            +e.titles
                +b.c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title 出荷登録CSVファイルフォーマット
                    i.fa.fa-question-circle.fa-lg.c-toolTip__icon
            +e.toggle
                a(href="#").c-button--small.c-button--normal 雛形ファイルダウンロード
        +e.contents
            table.c-csvTable
                tr
                    th 出荷ID
                    td 項目は未決定
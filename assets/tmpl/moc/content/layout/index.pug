extends /assets/tmpl/moc/layout/_layout-2col
block pageTitle
    include /assets/tmpl/components/pageTitle.pug
    +c-pageTitle("レイアウト管理","コンテンツ管理")

block outsideBlock
    +b.c-outsideBlock
        +e.contents
            .row
                .col.text-center
                    .btn-group.nav.d-inline-flex#pills-tab(role='tablist')
                        a#pills-pc-tab.nav-link.active.btn.btn-ec-tab.py-2.pl-4.pr-4(data-toggle='pill', href='#pills-pc', role='tab', aria-controls='pills-pc', aria-selected='true') PC
                        a#pills-mobile-tab.nav-link.btn.btn-ec-tab.py-2.pl-4.pr-4(data-toggle='pill', href='#pills-mobile', role='tab', aria-controls='pills-mobile', aria-selected='false') モバイル
            .d-block.mb-3
                a.btn.btn-ec-regular(href="/content/layout/detail") PC用レイアウトを新規追加

block primaryContents
    #pills-tabContent.tab-content
        #pills-pc.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='pills-pc-tab')
            .card.rounded.border-0.mb-4
                .card-header
                    .row
                        .col-8
                            .d-inline-block(data-toggle="tooltip" data-placement="top" title="Tooltip")
                                span.card-title デフォルトのレイアウト
                                i.fa.fa-question-circle.fa-lg.ml-1
                        .col-4.text-right
                            a(data-toggle="collapse" href="#defaultLayout" aria-expanded="false" aria-controls="defaultLayout")
                                i.fa.fa-angle-up.fa-lg
                .collapse#defaultLayout.show
                    .card-body
                        .row
                            .col-3.pr-0
                                form
                                    select.form-control
                                        option(value='') 下層ページ用レイアウト
                            .col
                                button.btn.btn-ec-regular(type='button') 登録
            .card.rounded.border-0.mb-4
                .card-header
                    .row
                        .col-8
                            a(href="/content/layout/detail").card-title.align-middle トップページ用レイアウト
                            button.btn.btn-ec-regular(type='button' data-toggle='modal' data-target='#addPage') ページ追加
                            button.btn.btn-ec-sub(type='button' data-toggle='modal' data-target='#layoutDelete') レイアウト削除
                        .col-4.text-right
                            a(data-toggle="collapse" href="#topPageLayout" aria-expanded="false" aria-controls="topPageLayout")
                                i.fa.fa-angle-up.fa-lg
                .collapse#topPageLayout.show
                    .card-body.p-0
                        .d-block.p-3
                            i.fa.fa-bars.text-ec-gray.mr-3
                            span トップページ（PC）
            .card.rounded.border-0.mb-4

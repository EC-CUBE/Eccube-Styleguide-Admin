extends /assets/tmpl/moc/layout/_layout-2col
block pageTitle
    +b.c-pageTitle
        +e.titles
            +e.H2.title ファイル管理
            +e.SPAN.subTitle コンテンツ管理

//- TODO マークアップ見直し必要
block primaryContents
    +b.c-block
        +e.heading
            +e.titles
                +b.c-toolTip(data-toggle="tooltip" data-placement="top" title="Tooltip")
                    span.c-toolTip__title ファイル・フォルダを追加
        +e.contents
            .row.mb-2
                .col-2
                    span ファイルを追加
                .col-10
                    a.c-button--small.c-button--normal(href="#") ファイルを選択
            .row.mb-2
                .col-2
                    span &nbsp;
                .col-10
                    a.c-button--regular.c-button--conversion(href="#") アップロード
            .row
                .col-2
                    span フォルダを追加
                .col-10
                    form.c-form
                        .c-form__text--regular
                            input(type="text" placeholder="フォルダ名")
                            button.c-button--regular.c-button--normal(style="margin-right:10px;") 新規作成